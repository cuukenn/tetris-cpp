{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Single Main",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-I${workspaceFolder}\\include",
                "-g",
                "${file}",
                "${workspaceFolder}\\src\\*.cpp",
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "compiler: g++.exe"
        }
    ]
}
